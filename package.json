{
  "private": true,
  "name": "@saberhq/saber-common",
  "description": "Common libraries across Saber projects.",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@project-serum/anchor": "^0.19.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "@saberhq/eslint-config": "*",
    "@saberhq/eslint-config-react": "*",
    "@size-limit/file": "^7.0.4",
    "@size-limit/webpack": "^7.0.4",
    "@solana/web3.js": "^1.31.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "bn.js": "^5.2.0",
    "bs58": "^4.0.1",
    "buffer": "^6.0.3",
    "eslint": "^8.4.1",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "jsbi": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "size-limit": "^7.0.4",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.3"
  },
  "scripts": {
    "build": "lerna run build",
    "typecheck": "tsc",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs:generate": "typedoc --excludePrivate --includeVersion --out docs/ packages/**/src/index.{ts,tsx}",
    "test": "jest **/*.test.ts"
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.1.1"
}
